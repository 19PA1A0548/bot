<!DOCTYPE html>
<html>
<head>
	<style type="text/css">
		body{
			/*background-color: red;*/
			background-color: black !important;
		}
		.h{
			height: 400px;
			/*background-color: blue;*/
			background-color: black;
		}
		#center{
			text-align: center;
			/*background-color: green;*/
			background-color: black;
			margin-left: 60px;
		}
		/*start*/
		*{
  			box-sizing: border-box;
		}
		#myInput {
		  /*background-image: url('/css/searchicon.png');*/
		  background-position: 10px 12px;
		  background-repeat: no-repeat;
		  width: 50%;
		  font-size: 16px;
		  padding: 12px 20px 12px 40px;
		  border: 1px solid #ddd;
		  margin-left: 60px;
		  margin-bottom: 12px;
		}
		.two{
		  text-align: center;
		  border-radius: 10px;
		  margin-top: 30px;
		  cursor: pointer;
		  transition: box-shadow .3s;
		}
		.two:hover{
			box-shadow: 0 0 50px red;
		}
		#ig{
		  border-radius: 50%;
		  border:2px solid blue;
		  height: 150px;
		  width: 150px;
		  margin-left: 70px;
		  margin-top: 20px;
		}
		#hide{
			display: none;
		}
	</style>
	<title></title>
	<!--bootstrap-->
	<!--css-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</head>
<body>
	<br>
	<h2 style="color:#01CAB6;margin-left: 60px;">Students to be Mentored</h2>
	<br>

	<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
	<br>
	<br>
	<div id="center">
		<div class="row">
			<% for(var i = 0;i<data.length;i++){%>
			<div class="col-md-4">
			<div class="card two" style="width: 18rem;">
  				<img src=<%= data[i].Photo %> class="card-img-top" alt="..." id="ig">
	  			<div class="card-body">
	    			<h5 class="card-title" id="one"><%= data[i].Name %></h5>
	    			<p class="card-title"><%= data[i].Department %>(<%= data[i].Year %>) <span style="margin-left: 100px;"><%= data[i].ID %></span></p>
	    			<hr>
	    			<a href=mailto:<%= data[i].Email %> class="btn btn-primary">Contact</a>
	    			<a href="/studentdata/<%= data[i].ID %>" target="_blank" class="btn btn-primary">View More</a>
	    			
	    			<span id="hide"><%= data[i].ID %></span>
	  			</div>
			</div>
			</div>
			<%}%>
		</div>
	</div>


<script>
function myFunction() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    // ul = document.getElementById("myUL");
    ul = document.getElementsByClassName("two");
    li = document.getElementsByTagName("h5");
    console.log(li);
    for (i = 0; i < li.length; i++) {
        a = li[i];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1){
            ul[i].style.display = "";
        } else {
            ul[i].style.display = "none";
        }
    }
}

// start





</script>
</body>
</html>